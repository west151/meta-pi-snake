# POKY_BBLAYERS_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
POKY_BBLAYERS_CONF_VERSION = "2"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
    ${HOME}/yocto-data/poky-rocko/meta \
    ${HOME}/yocto-data/poky-rocko/meta-poky \
    ${HOME}/yocto-data/poky-rocko/meta-openembedded/meta-oe \
    ${HOME}/yocto-data/poky-rocko/meta-openembedded/meta-multimedia \
    ${HOME}/yocto-data/poky-rocko/meta-openembedded/meta-networking \
    ${HOME}/yocto-data/poky-rocko/meta-openembedded/meta-python \
    ${HOME}/yocto-data/poky-rocko/meta-raspberrypi \
    ${HOME}/yocto-data/poky-rocko/meta-snake \
  "
